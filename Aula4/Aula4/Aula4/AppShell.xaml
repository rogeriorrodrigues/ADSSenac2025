<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Aula4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Aula4"
    Shell.FlyoutBehavior="Flyout"
    Title="Aula4">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <TabBar Route="CadastroPage">
        <ShellContent
            Title="Cadastro"
            ContentTemplate="{DataTemplate local:CadastroPage}"
            Route="CadastroPage" />

        <ShellContent
            Title="Listagem"
            ContentTemplate="{DataTemplate local:ListagemPage}"
            Route="ListagemPage" />
    </TabBar>

</Shell>
