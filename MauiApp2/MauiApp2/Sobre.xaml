<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Sobre"
             Title="Sobre">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <Label 
            Text="Teste com nova page Sobre!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Image Source="microsoft.png" Aspect="AspectFill"></Image>
            <Image Source="msp_logo.png" Aspect="AspectFill"></Image>
            <Button x:Name="btnAlert" 
                Text="Exibir alerta"
                HorizontalOptions="Fill"
                Clicked="BtnAlert_OnClicked"></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>